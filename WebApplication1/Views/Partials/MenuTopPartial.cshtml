@if (User.Identity.IsAuthenticated)
{
    var memberName = Membership.GetUser().UserName;

    <nav class="navbar navbar-light bg-faded">
        <div class="user">
            <div class="user-info">
                <h1>Welcome <a href="">@memberName</a></h1>
                <ul>
                    <li><a href=""><img src="media/1039/envelope-158279_1280.png" style="height:15px" /></a></li>
                    <li><a href="@Url.Action("Logout", "Login")">Logout</a></li>
                </ul>
            </div>
            <div class="profile-photo" style="float:right; background-color: white">
                <button id="myBtn2"><img src="/media/1040/user-icon-2098873_1920.png" style="height: 100%" /></button>
</div>
        </div>
        <div class="container" style="padding-left: 15px!important; padding-right: 15px">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#TopMenu">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="">VDiary</a>
            </div>

            <div class="collapse navbar-collapse navbar-toggleable-md" id="TopMenu">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="goHome">Home</a></li>
                    <li><a href="/your-tasks">Your tasks</a></li>
                    
                </ul>
            </div>
            
        </div>
    </nav>

    <div id="modalTopMenu" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <img src="/media/1040/user-icon-2098873_1920.png" />
                <h1><a href="">@memberName</a></h1>
            </div>
            <div class="modal-body">
                <p>Some text in the Modal...</p>
            </div>

        </div>
    </div>

    <script>
        var modal = document.getElementById('modalTopMenu');
        var btn = document.getElementById('myBtn2');
        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function() {
            modal.style.display = "block";
        }

        span.onclick = function () {
            modal.style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
}
else
{
    <nav class="navbar navbar-light bg-faded">
        <div class="container" style="padding-left: 15px!important; padding-right: 15px">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#TopMenu">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="">VDiary</a>
            </div>

            <div class="collapse navbar-collapse navbar-toggleable-md" id="TopMenu">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="goHome">Home</a></li>
                    <li><a class="goToFirst">What is VDiary?</a></li>
                    <li><a class="goToSecond">Public task</a></li>
                    <li><a class="goToThird">About</a></li>
                    <li><a href="/register">Register</a></li>
                    <li><a href="/login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
}

